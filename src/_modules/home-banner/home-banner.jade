mixin home-banner(spec)
  - spec = spec || {}
  - spec.__class = spec.__class || ''
  - spec.id = spec.id || ''
  - spec.title = spec.title || ''
  - spec.text = spec.text || ''
  - spec.link = spec.link || ''
  - spec.image = spec.image || 'http://placehold.it/1500x500'
  - spec.color = spec.color || '#000'

  section.home-banner(data-scroll id=spec.id class=spec.__class style="background-image:url(#{spec.image}); background-color:#{spec.color};")&attributes(attributes)
    .container
      .home-banner__content
        h1.home-banner__title
          span.hashtag #
          span.text!=spec.title
        p.home-banner__text=spec.text
        if spec.link
          a.home-banner__video(href='./' + spec.link)
            img(src="./images/video.jpg")
